            <!-- Lặp với foreach -->
            <% listUser.forEach(function(user) { %>
              <tr>
                <td>
                  <%= user.id %>
                </td>
                <td>
                  <%= user.email %>
                </td>
                <td>
                  <%= user.Name %>
                </td>
                <td>
                  <%= user.City %>
                </td>
                <td>
                  <button class="point">
                    <a href="/update/<%= user.id %>">Edit</a>
                  </button>
                  <button class="point point_action" >delete</button>
                </td>
              </tr>
             <% }); %>
        </table>
    </div>
