<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home Page</title>
    <link rel="stylesheet" href="/css/styles.css">
</head>

<style>
    table {
      border-collapse: collapse;
      width: 100%;
    }

    .table_data {
        padding: 80px 60px;
        
    }

    .title {
        font-size: 22px;
        font-weight: 600;
        color: #c70fbe;
    }
    
    th, td {
      padding: 8px;
      text-align: left;
      border-bottom: 1px solid #ddd;
    }
    
    tr:hover {background-color: rgb(200, 249, 252);}

    .point{
      cursor: pointer;
    }
    </style>

<body>
    <div class="topnav">
        <a class="active" href="/home">Home</a>
        <a href="/create">Create User</a>
    </div>

    <div class="table_data">
      
        <div class="title">List User</div>

        <table>

          <tr>
            <th>ID</th>
            <th>email</th>
            <th>Name</th>
            <th>City</th>
            <th>Action</th>
          </tr>

